<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp"
    >


    <ImageView
        android:id="@+id/imgKH_Cart"
        android:layout_width="125dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imgcourse" />

    <TextView
        android:id="@+id/tvTenKH_Cart"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/blue_deep"
        android:gravity="center|left"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_marginLeft="135dp"
        android:text="Lập trình Android"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvTenGV_Cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:textSize="15dp"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Teacher's name"
        android:textColor="@color/grey_hint_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTenKH_Cart" />

    <TextView
        android:id="@+id/tvGiaKH_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:text="700,000đ"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/red_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTenGV_Cart" />

    <ImageButton
        android:id="@+id/btnRemoveCart_Cart"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="332dp"
        android:layout_marginTop="70dp"

        android:background="@drawable/ic_btndelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    >


    <ImageView
        android:id="@+id/imgKH_Home"
        android:layout_width="100dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/no_image_found" />

    <TextView
        android:id="@+id/tvTenKH_Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Tên khóa học"
        android:textColor="@color/blue_deep"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgKH_Home" />

    <TextView
        android:id="@+id/tvTenGV_Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:textSize="15dp"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Teacher's name"
        android:textColor="@color/grey_hint_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTenKH_Home" />

    <TextView
        android:id="@+id/tvGiaKH_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:text="700,000đ"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/red_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ratingBar_Home" />

    <RatingBar
        android:id="@+id/ratingBar_Home"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="82dp"
        android:layout_height="21dp"
        android:rating="4"
        android:theme="@style/RatingBar"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="2dp"
        android:isIndicator="true"
        android:numStars="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTenGV_Home" />

    <ImageButton
        android:id="@+id/btnRemoveCart_Home"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="352dp"
        android:layout_marginTop="80dp"

        android:background="@drawable/ic_btndelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <ImageButton
        android:id="@+id/btnAddCart_Home"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="352dp"
        android:layout_marginTop="80dp"

        android:background="@drawable/decorate_btn_addcart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add_24" />




</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.pay.PayActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layoutEditUser_Pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textlines"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin người dùng"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_location"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:paddingLeft="30dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Họ và Tên"
                            android:layout_marginTop="5dp"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:drawablePadding="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:drawablePadding="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa chỉ"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:drawablePadding="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số điện thoại"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:drawablePadding="5dp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tvName_Pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:hint="Chưa rõ thông tin"
                            android:textColorHint="@color/grey_hint_txt"
                            android:layout_marginTop="5dp"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:drawablePadding="5dp"
                            />
                        <TextView
                            android:id="@+id/tvEmail_Pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:hint="Chưa rõ thông tin"
                            android:textColorHint="@color/grey_hint_txt"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:drawablePadding="5dp"
                            />
                        <TextView
                            android:id="@+id/tvAddress_Pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:hint="Chưa rõ thông tin"
                            android:textColorHint="@color/grey_hint_txt"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:drawablePadding="5dp"
                            />
                        <TextView
                            android:id="@+id/tvPhone_Pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:hint="Chưa rõ thông tin"
                            android:textColorHint="@color/grey_hint_txt"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:drawablePadding="5dp"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"

                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sửa"
                            android:textSize="14dp"
                            android:layout_gravity="center"
                            android:textColor="@color/grey_hint_txt"
                            android:drawablePadding="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_next_navigation"
                            />

                    </LinearLayout>


                    </LinearLayout>

                </LinearLayout>






                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/rclPay_Pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/green_dolla"
                    >

                </androidx.recyclerview.widget.RecyclerView>



            </LinearLayout>













        </LinearLayout>
    </ScrollView>


</LinearLayout>
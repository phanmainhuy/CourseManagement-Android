<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:padding="20dp"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imgLogo_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="50dp"

                app:srcCompat="@drawable/logoapp"

                />
            <TextView
                android:id="@+id/lblSlogan_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Learning is the eye of the mind" />
            <TextView
                android:id="@+id/lblTenDN_Login"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Tài khoản" />

            <EditText
                android:id="@+id/txtusername_Login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/decorate_text_login"
                android:drawablePadding="10dp"
                android:hint="Tên đăng nhập"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_account"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_txt"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/lblMatKhau_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Mật khẩu" />

            <EditText
                android:id="@+id/txtPassword_Login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:background="@drawable/decorate_text_login"
                android:hint="Mật khẩu"
                android:drawableLeft="@drawable/ic_password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_txt"


                />


                <CheckBox
                    android:layout_marginTop="10dp"
                    android:id="@+id/chkSave_Login"
                    android:layout_width="185dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="4dp"
                    android:buttonTint="@color/blue_ForgetPass"
                    android:text="Lưu mật khẩu"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>





                <Button
                    android:id="@+id/btnLogin_Login"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/green_dolla"
                    android:text="Đăng nhập"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"

                    />
                <TextView
                    android:id="@+id/btnForgetPass_Login"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_ForgetPass"
                    android:textSize="15dp"
                    android:gravity="right"
                    android:text="Quên mật khẩu?" />
                <TextView
                    android:id="@+id/lblor_Login"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_light"
                    android:textSize="15dp"

                    android:gravity="center"
                    android:text="Đăng nhập bằng mạng xã hội"

                    />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/btnfb_Login"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/white"
                android:text=""
                android:drawableTop="@drawable/iconfb"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/white"
                android:drawableTop="@drawable/icongg" />


        </LinearLayout>


                <Button
                    android:id="@+id/btnRegist_Login"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/green_dolla"
                    android:text="Đăng ký tài khoản mới"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"

                    />









        </LinearLayout>
    </ScrollView>
</LinearLayout>
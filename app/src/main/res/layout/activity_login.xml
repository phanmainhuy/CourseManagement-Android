<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.login.LoginActivity"

    android:background="@drawable/background3"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"

            >

            <ImageView
                android:id="@+id/imgLogo_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="50dp"
                app:srcCompat="@drawable/logoapp"

                />
            <TextView
                android:id="@+id/lblSlogan_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"

                android:textStyle="bold"
                android:text="Learning is the eye of the mind" />
            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:text="Tài khoản" />

            <EditText
                android:id="@+id/txtusername_Login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/decorate_text_login"
                android:drawablePadding="10dp"
                android:hint="Tên đăng nhập"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_account"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_txt"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Mật khẩu" />

            <EditText
                android:id="@+id/txtPassword_Login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:background="@drawable/decorate_text_login"
                android:hint="Mật khẩu"
                android:drawableLeft="@drawable/ic_password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_txt"


                />


                <CheckBox
                    android:layout_marginTop="15dp"
                    android:id="@+id/chkSave_Login"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:buttonTint="@color/blue_ForgetPass"
                    android:layout_marginLeft="5dp"
                    android:text="Lưu mật khẩu"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>





                <Button
                    android:id="@+id/btnLogin_Login"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Đăng nhập"

                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"

                    />
                <TextView
                    android:id="@+id/btnForgetPass_Login"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:textStyle="bold"
                    android:textSize="15dp"

                    android:layout_gravity="right"
                    android:text="Quên mật khẩu?" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:text="Bằng việc đăng nhập, bạn đã đồng ý " />
                    <TextView
                        android:id="@+id/tvDieuKhoanSD_Login"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/yellow"
                        android:textSize="15dp"
                        android:text="Điều khoản sử dụng" />


                </LinearLayout>



                <Button
                    android:id="@+id/btnRegist_Login"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="60dp"
                    android:text="Đăng ký tài khoản mới"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"

                    />









        </LinearLayout>
    </ScrollView>
</LinearLayout>
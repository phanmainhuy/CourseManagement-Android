<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/imgUserAvatar_Community"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_user" />

    <TextView
        android:id="@+id/tvName_Community"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:text="Name"
        android:layout_marginLeft="85dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvDateRating_Community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02/01/2022"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvName_Community"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSoRating_Community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="4"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ratingBar_Community"
        app:layout_constraintTop_toTopOf="@+id/ratingBar_Community" />

    <RatingBar
        android:id="@+id/ratingBar_Community"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="82dp"
        android:layout_height="21dp"
        android:layout_marginLeft="85dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="4"
        android:theme="@style/RatingBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName_Community" />

    <TextView
        android:id="@+id/tvNoidung_Community"
        android:layout_width="314dp"
        android:layout_height="20dp"
        android:layout_marginLeft="85dp"
        android:text="Nội dung bình luận"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar_Community" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.forget_pass.ForgetpassActivity"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp"


    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLogo_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="50dp"

                app:srcCompat="@drawable/logoapp"

                />
            <TextView
                android:id="@+id/lblSlogan_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Learning is the eye of the mind" />

            <TextView
                android:id="@+id/lblMatKhau_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Nhập số điện thoại" />

            <EditText
                android:id="@+id/txtPassword_Login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:drawableLeft="@drawable/ic_phone"
                android:background="@drawable/decorate_text_login"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_txt"


                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >

            <Button
                android:id="@+id/btn_getOTP_Forgetpass"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTint="@color/red_price"
                android:text="Lấy mã OTP"
                />

            </LinearLayout>

            <TextView
                android:id="@+id/lblMatKhau_Login2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Mã OTP" />

            <EditText
                android:id="@+id/txtOTP_Forgetpass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:background="@drawable/decorate_text_login"
                android:hint="Nhập mã OTP"

                android:inputType="number"
                android:maxLength="4"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_txt"


                />





            <Button
                android:id="@+id/btn_xacnhan_forgetpass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"

                android:backgroundTint="@color/blue_primary"
                android:text="Xác nhận"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"

                />




        </LinearLayout>
    </ScrollView>

</LinearLayout>
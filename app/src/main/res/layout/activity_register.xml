<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background10"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"

    tools:context=".activity.register.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="ĐĂNG KÝ TÀI KHOẢN"
                android:textColor="@color/black"
                android:textSize="35dp"
                 />

            <ImageView
                android:id="@+id/imgLogo_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                app:srcCompat="@drawable/logoapp"

                />

            <EditText
                android:id="@+id/txt_username_Register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/decorate_text_register"
                android:drawableLeft="@drawable/ic_account"
                android:drawablePadding="10dp"
                android:hint="Tên đăng nhập"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_txt"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txt_password_Register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/decorate_text_register"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_txt"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txt_repass_Register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/decorate_text_register"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:hint="Nhập lại mật khẩu"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_txt"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvValidate_Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:textColor="@color/blue_ForgetPass"
                />

            <Button
                android:id="@+id/btnRegister_Register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:text="Đăng ký"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCancel_Register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Huỷ bỏ"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/btnSaveRegister" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.change_pass_forget.ChangePassForgetActivity"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="50dp"

                app:srcCompat="@drawable/logoapp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Learning is the eye of the mind" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textSize="15dp"
                android:text="Username" />

            <EditText
                android:id="@+id/txtUserName_ForgetPass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:drawableLeft="@drawable/ic_account"
                android:background="@drawable/decorate_text_register"
                android:hint="Tên đăng nhập"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_txt"


                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"

                android:textColor="@color/white"
                android:background="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Email" />

            <EditText
                android:id="@+id/txtEmail_ForgetPass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:background="@drawable/decorate_text_register"
                android:hint="Email"
                android:drawableLeft="@drawable/ic_email"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_txt"


                />





            <Button
                android:id="@+id/btnContinue_ForgetPass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"

                android:text="Tiếp tục"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"

                />
            <Button
                android:id="@+id/btnCancel_ForgetPass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:text="Hủy bỏ"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"

                />



        </LinearLayout>
    </ScrollView>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background9"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activity.change_pass_forget.ChangePassForgetActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ĐỔI MẬT KHẨU"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textStyle="bold" />





            <EditText
                android:id="@+id/txtPassword_ForgetPass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/decorate_text_register"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:hint="Mật khẩu mới"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_txt"
                android:textSize="15dp"


                />



            <EditText
                android:id="@+id/txtRePass_ForgetPass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/decorate_text_register"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:hint="Nhập lại mật khẩu mới"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_txt"
                android:textSize="15dp"


                />
            <EditText
                android:id="@+id/txtCode_ForgetPass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/decorate_text_register"
                android:drawableLeft="@drawable/ic_code"
                android:drawablePadding="10dp"
                android:hint="Nhập Code"
                android:maxLength="7"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_hint_txt"
                android:textSize="15dp"


                />
            <TextView
                android:id="@+id/tvValidate_ForgetPass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:text=""
                android:textColor="@color/red_basic"
                android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTimeCode_ForgetPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:layout_gravity="left|center"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Time"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnResendCode_ForgetPass"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Gửi lại mã code"
                android:backgroundTint="@color/red_basic"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"

                />

        </LinearLayout>



            <Button
                android:id="@+id/btnChangePass_FG"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:text="Đổi mật khẩu"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"

                />




        </LinearLayout>
    </ScrollView>


</LinearLayout>